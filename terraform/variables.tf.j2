variable "minecraft" {
  type = map

  default = {
    port         = {{ server['port'] | default(25565) }}
    bucket_name  = "{{ aws['s3_bucket'] }}"
    server_name  = "{{ server['name'] }}"
    hostname     = "{{ server['hostname'] }}"
  }
}

variable "max_spot_price" {
  description = "Maximum amount to pay for per spot instance per hour."
  default     = "{{ aws['max_spot_price'] }}"
}

variable "aws_region" {
  description = "AWS region to launch servers in."
  default     = "{{ aws['region'] }}"
}

variable "aws_availability_zone" {
  description = "AWS availability zone to launch servers in."
  default     = "{{ aws['availability_zone'] }}"
}

variable "aws_instance_type" {
  description = "Spot instance type to launch."
  default     = "{{ aws['instance_type'] }}"
}

variable "aws_eip_alloc_id" {
  description = "Elastic IP allocation ID to associate with the server. (DEPRECATED)"
  default     = "{{ aws['eip_alloc_id'] }}"
}
